---
import Translator from './system/Translator.astro';
---

<section id="main" class="page">
    <div id="one" class="inner">
      <header class="major">
        <h1>
          <Translator name="section.about-me.title" />
        </h1>
      </header>
      <div class="flex flex-col md:flex-row">
        <div class="w-full lg:w-2/3">
          <p>
            <Translator name="section.about-me.text0" />
          </p>
          <p>
            <Translator name="section.about-me.text1" />
          </p>
          <p>
            <Translator name="section.about-me.text2" />
          </p>
          <p>
            <Translator name="section.about-me.text3" />
          </p>
          <p>
            <Translator name="section.about-me.text4" />
          </p>
          <p>
            <Translator name="section.about-me.text5" />
          </p>
        </div>
        <div class="w-full lg:w-1/3">
          <picture>
            <source src="/images/about2.webp" type="image/webp" />
            <img src="/images/about2.jpg" class="mx-auto" />
          </picture>
        </div>
      </div>
    </div>
  </section>